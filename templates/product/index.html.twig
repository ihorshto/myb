{% extends 'base.html.twig' %}

{% block title %}Nos produits - MyBoutique
{% endblock %}

{% block content %}
	<h1 class="mt-3">Nos Produits</h1>


	<div class="row">

		<div class="col-md-3">

			{{form(form)}}
			</div>


			<div class="col-md-9">
				<div class="row">

		{% if error %}
					<div class="alert alert-danger">

						{{error}}
					</div>
		{% endif %}
					{% for product in products %}
						<div class="col-md-4 mt-4">
							<a href="{{path('product',{'slug':product.slug})}}">
								<img src="/uploads/images/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>
							<div class="product-item">
								<h5>{{product.name}}</h5>
								<div>{{product.subtitle}}</div>
								<div>{{(product.price/100)|number_format(2)}}
									â‚¬</div>

							</div>


						</div>
					{% endfor %}
				</div>
			</div>

		</div>


	{% endblock %}
