{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}



{% block content %}

	<h1 class="mt-3">Inscription sur le site</h1>

	<div>


		{{ form_start(form) }}
		{{form_row(form.firstName)}}
		{{form_row(form.lastName)}}
		{{form_row(form.pseudo)}}
		{{form_row(form.email,{'label':false,'attr':{'placeholder':'Votre email'}})}}
		{{form_row(form.password,{'label':false,'attr':{'placeholder':'Votre mot de passe'}})}}
		{{form_row(form.confirmPassword)}}
		{{ form_end(form) }}


	</div>


{% endblock %}
